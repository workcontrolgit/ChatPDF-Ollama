{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "vectordb": "Endpoint=http://localhost:6333",
    "chat": "Endpoint=http://localhost:11434",
    "embeddings": "Endpoint=http://localhost:11434"
  },
  "Ollama": {
    "Chat": {
      "ModelName": "llama3.2",
      "EnableFunctionInvocation": true,
      "EnableOpenTelemetry": false
    },
    "Embeddings": {
      "ModelName": "nomic-embed-text"
    }
  },
  "IdentityServer": {
    "Authority": "https://localhost:44310",
    "ClientId": "Blazor.Spa",
    "RequireHttpsMetadata": false,
    "Scopes": ["openid", "profile", "email"]
  },
  "Application": {
    "VectorDatabase": {
      "ChunksCollectionName": "data-chatpdf-chunks",
      "DocumentsCollectionName": "data-chatpdf-documents"
    },
    "DataIngestion": {
      "PdfDirectory": "Data",
      "IngestOnStartup": true,
      "MaxFileSizeMB": 10
    },
    "HttpPipeline": {
      "ErrorPage": "/Error",
      "HstsMaxAgeDays": 30,
      "UseHttpsRedirection": true,
      "UseAntiforgery": true
    }
  }
}
